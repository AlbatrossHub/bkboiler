<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_form_view_bkb_custom" model="ir.ui.view">
        <field name="name">mrp.production.form.bkb.specs</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="customer_id"/>
                <field name="sos_no"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_select_view_bkb_custom" model="ir.ui.view">
        <field name="name">mrp.production.select.bkb.specs</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="customer_id"/>
                <field name="sos_no"/>
            </xpath>
        </field>
    </record>
</odoo>